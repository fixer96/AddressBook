{{ form_start(contactForm) }}
<div class="row">
    <div class="col-6">
        {{ form_row(contactForm.firstName) }}
        {{ form_row(contactForm.lastName) }}
        {{ form_row(contactForm.phoneNumber) }}
        {{ form_row(contactForm.email) }}
        {{ form_row(contactForm.birthday) }}
    </div>
    <div class="col-6">
        {{ form_row(contactForm.address.country) }}
        {{ form_row(contactForm.address.city) }}
        {{ form_row(contactForm.address.street) }}
        {{ form_row(contactForm.address.zipCode) }}
        {{ form_row(contactForm.image) }}
    </div>
</div>
<div class="row mt-4">
    <div class="col-4"></div>
    <div class="col-2">
        <a href="{{ path('contact_index') }}">
            <button type="button" class="btn btn-warning  w-100">Cancel</button>
        </a>
    </div>
    <div class="col-2">
        <input type="submit" value="Submit" class="btn btn-success  w-100"/>
    </div>
    <div class="col-4"></div>
</div>
{{ form_end(contactForm) }}
